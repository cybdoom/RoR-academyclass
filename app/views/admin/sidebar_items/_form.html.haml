= semantic_form_for [:admin, @sidebar_item], :html => {:multipart => true} do |p|  
  = p.inputs do
    = p.input :title
    .no-float-label
      = p.input :content, as: :ckeditor, input_html: {class: "basic-input"}
    = p.input :order_num
  %fieldset.actions
    %ol
      %li.action.input_action
        = p.submit
