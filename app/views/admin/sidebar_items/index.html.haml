- content_head do
  = link_to "Add Sidebar Item", new_admin_sidebar_item_path, :class => "button"
  %h2 Sidebar Items

= content_box do
  %ul.table.sidebar_items
    %li.header
      .title Title
      .order_num Order Number
    - @sidebar_items.each do |si|
      %li{:class => cycle("alt_row","")}
        .title= si.title
        .order_num= si.order_num
        .edit-link= link_to "Edit", edit_admin_sidebar_item_path(si)
        .delete-link= link_to "Delete", admin_sidebar_item_path(si), :confirm => "Are you sure?", :method => :delete
