- content_head do
  = link_to "Add Sidebar Item", new_admin_sidebar_item_path, :class => "button"
  %h2 Sidebar Items

%a{:href => "/prioritise/update", :id => "prioritise-url", :style => "display:none"}
= content_box do
  %ul.table.sortable.sort-update.sidebar_items
    %li.header
      .title Title
    - @sidebar_items.each do |si|
      %li{:class => cycle("alt_row",""), :id => "SidebarItem_#{si.id}"}
        .drag-handle [handle]
        .title= si.title
        .edit-link= link_to "Edit", edit_admin_sidebar_item_path(si)
        .delete-link= link_to "Delete", admin_sidebar_item_path(si), :confirm => "Are you sure?", :method => :delete
