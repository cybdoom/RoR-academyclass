= semantic_form_for [:admin, @news], :html => {:multipart => true} do |p|  
  = p.inputs do
    = p.input :title
    .no-float-label
      = p.input :description, as: :ckeditor, input_html: {class: "basic-input"}
    .no-float-label
      = p.input :content, as: :ckeditor, input_html: {class: "basic-input"}
    = p.input :sticky
    = p.input :image
  = p.actions
