= semantic_form_for [:admin, @news], :html => {:multipart => true} do |p|  
  = p.inputs do
    = p.input :title
    .no-float-label
      = p.input :description, input_html: {class: "basic-input ckeditor"}
    .no-float-label
      = p.input :content, input_html: {class: "basic-input ckeditor"}
    = p.input :sticky
    = p.input :image
  %fieldset.actions
    %ol
      %li.action.input_action
        = p.submit "#{@news.new_record? ? "Create" : "Update"} News"
        = p.submit "#{@news.new_record? ? "Create" : "Update"} News and #{@news.published_at ? "Unpublish" : "Publish"}"

