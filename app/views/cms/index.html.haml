#template
  %h1#homepage-title Digital Media Training Courses
  .authorised-box
    %span
      Authorised training centre for:
    = image_tag "authorised_training_centre/adobe-authorised-training-centre.png"
    = image_tag "authorised_training_centre/apple-authorised-training-centre.png"
    = image_tag "authorised_training_centre/autodesk-authorised-training-centre.png"
    = image_tag "authorised_training_centre/wacom-authorised-training-centre.png"
    = image_tag "authorised_training_centre/riba.png"
- @families.each do |family|
  .family-box
    %h2= link_to family.name, family_path(family.slug)
    %p= link_to family.tagline, family_path(family.slug)
    = link_to image_tag(family.family_image.url, :alt => family.name, :class => 'icon'), family_path(family.slug)
    .course-list-box
      .button.arrow-up
      = image_tag("homepage_family_box/arrow-up.png", :alt => "Arrow Up", :title => "Scroll Up", :class => "image-up")
      .scroll-box
        %ul
          - family.products.each do |product|
            %li= link_to h(product.name), product.url
      .button.arrow-down
      = image_tag("homepage_family_box/arrow-down.png", :alt => "Arrow Down", :title => "Scroll Down", :class => "image-down")

.boxed-content=raw textilize @content
- @news.each do |news|
  = news.title
  %br
.row
  - @news.each do |news|
    .post-block
      = link_to(news_path(news), :target => "_blank") do
        = image_tag news.image.url(:medium)
      .post-header
        = news.title
      .post-published
        Published on #{news_date_val news.published_at}
      .post-content
        = raw news.description
       
      = link_to "Read More", news_path(news), class: 'post-read_more', :target => "_blank"
      .pt50




