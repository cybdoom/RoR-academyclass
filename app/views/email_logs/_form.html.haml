#new-subscription
  =raw display_flash
  .title Enter your name and email address
  = semantic_form_for @email_log do |f|
    = f.inputs do
      = f.input :name
      = f.input :email
      = f.input :log_type, :as => :hidden
      = f.input :course_id, :as => :hidden
      = f.input :link, :input_html => { :value => request.original_url.to_s }, :as => :hidden
    = f.actions do
      = f.action :submit, :label => "Subscribe"
