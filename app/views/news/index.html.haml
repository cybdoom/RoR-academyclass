- content_for :breadcrumbs do
  = link_to "Home", root_path
  = breadcrumb_link_to "News", news_index_path
- content_for :meta_title do
  Academy Class - News

- @news.each do |news|
  .news-item
    = image_tag news.image.url(:medium)
    .info
      %h2= news.title
      %p Published on 23/09/2014
      .description= raw news.description
      = link_to "Read More", news_path(news)
    .clearfix

= will_paginate @news
